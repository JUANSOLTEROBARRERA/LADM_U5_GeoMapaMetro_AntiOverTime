<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <ImageView
            android:id="@+id/imagen4"
            android:layout_width="250dp"
            android:src="@drawable/plantas2"
            android:layout_height="110dp"
            android:layout_marginLeft="300dp"/>
        <TextView
            android:id="@+id/bienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/bien"
            android:text="¡DISFRUTA TU ESTANCIA!" />
        <ImageView
        android:id="@+id/imagen3"
        android:layout_width="250dp"
        android:src="@drawable/metropolitano"
        android:layout_height="250dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/bienvenida"/>

        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/bienvenida"/>

        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_toRightOf="@+id/imagen1"
            android:layout_below="@+id/bienvenida"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imagen1"
            android:textAlignment="center"
            android:textColor="@color/bien"
            android:text="Estás en" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagen3"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="Estás en"
            android:textAlignment="center"
            android:textColor="@color/bien"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imagen5"
            android:src="@drawable/plantas3"
            android:layout_width="420dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView4"
            android:layout_height="650dp"/>
        <ImageView
            android:id="@+id/imagen6"
            android:src="@drawable/plantas3"
            android:layout_width="420dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView5"
            android:layout_height="650dp"/>
</RelativeLayout>